{
  "private": true,
  "name": "stumatch-backend",
  "version": "0.0.0",
  "description": "The sTUMatch backend.",
  "author": "Nhu Duong, Manuel Römer, Quoc Khang Phan, Jonas Großmann",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "npm run clean && tsc -w",
    "clean": "rimraf dist",
    "seed": "npm run build && node dist/db/seed.js",
    "lint": "eslint \"./src/**.ts\"",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "socket.io": "^4.1.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.3.0",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.2"
  }
}
